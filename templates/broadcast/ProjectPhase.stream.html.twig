{% block create %}
    <turbo-stream action="append" target="project_phases">
        <template>
            <div id="{{ 'project_phase_' ~ id }}">
                #{{ id }} created
            </div>
        </template>
    </turbo-stream>
{% endblock %}

{% block update %}
    <turbo-stream action="update" target="project_phase_{{ id }}">
        <template>
            #{{ id }} updated
        </template>
    </turbo-stream>
{% endblock %}

{% block remove %}
    <turbo-stream action="remove" target="project_phase_{{ id }}"></turbo-stream>
{% endblock %}
